<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">
    <!-- v1.0.0 -->
    <changeSet author="aarchilla (generated)" id="1.0/CH1">
        <comment>Create APP_USER and related tables</comment>
        <createTable tableName="APP_USER">
            <column name="ID" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_USER"/>
            </column>
            <column name="VERSION" type="BIGINT"/>
            <column name="USERNAME" type="VARCHAR(255)"/>
            <column name="PASSWORD" type="VARCHAR(255)"/>
            <column name="COMPLETE_NAME" type="VARCHAR(255)"/>
            <column defaultValueBoolean="true" name="ACTIVE" type="BOOLEAN"/>
            <column name="CREATION_DATE" type="TIMESTAMP"/>
            <column name="LAST_UPDATED" type="TIMESTAMP"/>
        </createTable>

        <createTable tableName="APP_USER_GROUP">
            <column name="ID" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_USER_GROUP"/>
            </column>
            <column name="VERSION" type="BIGINT"/>
            <column name="NAME" type="VARCHAR(255)"/>
            <column name="DESCRIPTION" type="VARCHAR(255)"/>
            <column defaultValueBoolean="true" name="ACTIVE" type="BOOLEAN"/>
            <column name="CREATION_DATE" type="TIMESTAMP"/>
            <column name="LAST_UPDATED" type="TIMESTAMP"/>
        </createTable>

        <createTable tableName="APP_AUTHORITY">
            <column name="ID" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_AUTHORITY"/>
            </column>
            <column name="VERSION" type="BIGINT"/>
            <column name="NAME" type="VARCHAR(255)"/>
            <column name="DESCRIPTION" type="VARCHAR(255)"/>
            <column name="CREATION_DATE" type="TIMESTAMP"/>
            <column name="LAST_UPDATED" type="TIMESTAMP"/>
        </createTable>

        <createTable tableName="APP_USER_GROUP_AUTH">
            <column name="ID" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_USER_GROUP_AUTH"/>
            </column>
            <column name="VERSION" type="BIGINT"/>
            <column name="GROUP_ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="AUTHORITY_ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATION_DATE" type="TIMESTAMP"/>
            <column name="LAST_UPDATED" type="TIMESTAMP"/>
        </createTable>

        <createTable tableName="APP_USER_GROUP_MEMBER">
            <column name="GROUP_ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="USER_ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATION_DATE" type="TIMESTAMP" defaultValueDate="${current_timestamp}"/>
        </createTable>

        <addUniqueConstraint tableName="APP_AUTHORITY" columnNames="NAME" constraintName="C_AUTH_NAME"/>
        <addUniqueConstraint tableName="APP_USER_GROUP" columnNames="NAME" constraintName="C_USER_GROUP_NAME"/>
        <addUniqueConstraint tableName="APP_USER_GROUP_AUTH" columnNames="GROUP_ID, AUTHORITY_ID" constraintName="C_USER_GROUP_AUTH"/>
        <addUniqueConstraint tableName="APP_USER_GROUP_MEMBER" columnNames="GROUP_ID, USER_ID" constraintName="C_USER_GROUP_MEMBER"/>

        <addForeignKeyConstraint baseColumnNames="GROUP_ID"
                                 baseTableName="APP_USER_GROUP_AUTH"
                                 constraintName="FK_USER_GROUP_AUTH_GROUP"
                                 deferrable="false"
                                 initiallyDeferred="false"
                                 onDelete="NO ACTION"
                                 onUpdate="NO ACTION"
                                 referencedColumnNames="ID"
                                 referencedTableName="APP_USER_GROUP"
                                 referencesUniqueColumn="true"/>

        <addForeignKeyConstraint baseColumnNames="AUTHORITY_ID"
                                 baseTableName="APP_USER_GROUP_AUTH"
                                 constraintName="FK_USER_GROUP_AUTH_AUTH"
                                 deferrable="false"
                                 initiallyDeferred="false"
                                 onDelete="NO ACTION"
                                 onUpdate="NO ACTION"
                                 referencedColumnNames="ID"
                                 referencedTableName="APP_AUTHORITY"
                                 referencesUniqueColumn="true"/>

        <addForeignKeyConstraint baseColumnNames="GROUP_ID"
                                 baseTableName="APP_USER_GROUP_MEMBER"
                                 constraintName="FK_USER_GROUP_MEMBER_GROUP"
                                 deferrable="false"
                                 initiallyDeferred="false"
                                 onDelete="NO ACTION"
                                 onUpdate="NO ACTION"
                                 referencedColumnNames="ID"
                                 referencedTableName="APP_USER_GROUP"
                                 referencesUniqueColumn="true"/>

        <addForeignKeyConstraint baseColumnNames="USER_ID"
                                 baseTableName="APP_USER_GROUP_MEMBER"
                                 constraintName="FK_USER_GROUP_MEMBER_USER"
                                 deferrable="false"
                                 initiallyDeferred="false"
                                 onDelete="NO ACTION"
                                 onUpdate="NO ACTION"
                                 referencedColumnNames="ID"
                                 referencedTableName="APP_USER"
                                 referencesUniqueColumn="true"/>

        <!-- SEQUENCES -->
        <createSequence sequenceName="SEQ_APP_USER"
                        startValue="1"
                        incrementBy="1"
                        cycle="false"/>
        <createSequence sequenceName="SEQ_APP_USER_GROUP"
                        startValue="1"
                        incrementBy="1"
                        cycle="false"/>
        <createSequence sequenceName="SEQ_APP_AUTHORITY"
                        startValue="1"
                        incrementBy="1"
                        cycle="false"/>
        <createSequence sequenceName="SEQ_APP_USER_GROUP_AUTH"
                        startValue="1"
                        incrementBy="1"
                        cycle="false"/>
        <createSequence sequenceName="SEQ_APP_USER_GROUP_MEMBER"
                        startValue="1"
                        incrementBy="1"
                        cycle="false"/>
    </changeSet>

    <changeSet author="aarchilla (generated)" id="1.0/CH2">
        <!-- USER GROUPS -->
        <insert tableName="APP_USER_GROUP">
            <column name="ID" valueSequenceNext="SEQ_APP_USER_GROUP"/>
            <column name="VERSION" valueNumeric="1"/>
            <column name="NAME" value="ADMIN"/>
            <column name="DESCRIPTION" value="Administrator group"/>
            <column name="ACTIVE" valueBoolean="true"/>
            <column name="CREATION_DATE" valueComputed="${current_timestamp}"/>
            <column name="LAST_UPDATED" valueComputed="${current_timestamp}"/>
        </insert>
        <insert tableName="APP_USER_GROUP">
            <column name="ID" valueSequenceNext="SEQ_APP_USER_GROUP"/>
            <column name="VERSION" valueNumeric="1"/>
            <column name="NAME" value="USER"/>
            <column name="DESCRIPTION" value="Common user group"/>
            <column name="ACTIVE" valueBoolean="true"/>
            <column name="CREATION_DATE" valueComputed="${current_timestamp}"/>
            <column name="LAST_UPDATED" valueComputed="${current_timestamp}"/>
        </insert>
    </changeSet>

    <changeSet author="aarchilla (generated)" id="1.0/CH3">
        <comment>Create content ITEM, ITEM_SCHEMA and TAG tables</comment>
        <createTable tableName="ITEM">
            <column name="ID" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_ITEM"/>
            </column>
            <column name="VERSION" type="BIGINT"/>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="STATUS" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="SCHEMA_ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATION_DATE" type="TIMESTAMP"/>
            <column name="LAST_UPDATED" type="TIMESTAMP"/>
        </createTable>

        <createTable tableName="ITEM_GROUP">
            <column name="ID" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_ITEM_GROUP"/>
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="VERSION" type="BIGINT"/>
            <column name="CREATION_DATE" type="TIMESTAMP"/>
            <column name="LAST_UPDATED" type="TIMESTAMP"/>
        </createTable>

        <createTable tableName="ITEM_GROUP_ITEM">
            <column name="ITEM_GROUP_ID" type="BIGINT"/>
            <column name="ITEM_ID" type="BIGINT"/>
            <column name="TAG_DATE" type="TIMESTAMP" defaultValueDate="CURRENT_TIMESTAMP"/>
        </createTable>

        <createTable tableName="TAG">
            <column name="ID" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_TAG"/>
            </column>
            <column name="VERSION" type="BIGINT"/>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="PREFERRED" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="CREATION_DATE" type="TIMESTAMP"/>
            <column name="LAST_UPDATED" type="TIMESTAMP"/>
        </createTable>

        <createTable tableName="ITEM_TAG">
            <column name="TAG_ID" type="BIGINT"/>
            <column name="ITEM_ID" type="BIGINT"/>
            <column name="TAG_DATE" type="TIMESTAMP" defaultValueDate="${current_timestamp}"/>
        </createTable>

        <createTable tableName="ITEM_SCHEMA">
            <column name="ID" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_ITEM_SCHEMA"/>
            </column>
            <column name="VERSION" type="BIGINT"/>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="EXTERNAL_ID" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="CREATION_DATE" type="TIMESTAMP"/>
            <column name="LAST_UPDATED" type="TIMESTAMP"/>
        </createTable>

        <createTable tableName="ITEM_SCHEMA_FIELD">
            <column name="ID" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_ITEM_SCHEMA_FIELD"/>
            </column>
            <column name="VERSION" type="BIGINT"/>
            <column name="SCHEMA_ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="DATA_TYPE" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="COMMENTS" type="${clob_type}"/>
            <column name="CREATION_DATE" type="TIMESTAMP"/>
            <column name="LAST_UPDATED" type="TIMESTAMP"/>
        </createTable>

        <createTable tableName="ITEM_FIELD">
            <column name="ID" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_ITEM_FIELD"/>
            </column>
            <column name="VERSION" type="BIGINT"/>
            <column name="ITEM_ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="FIELD_ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <!-- "value" is a reserved word in H2 (used to test)
                 https://github.com/h2database/h2database/issues/3292
            -->
            <column name="VAL" type="${clob_type}"/>
            <column name="CREATION_DATE" type="TIMESTAMP"/>
            <column name="LAST_UPDATED" type="TIMESTAMP"/>
        </createTable>

        <!-- Sequences -->
        <createSequence sequenceName="SEQ_ITEM"
                        startValue="1"
                        incrementBy="1"
                        cycle="false"/>
        <createSequence sequenceName="SEQ_ITEM_GROUP"
                        startValue="1"
                        incrementBy="1"
                        cycle="false"/>
        <createSequence sequenceName="SEQ_TAG"
                        startValue="1"
                        incrementBy="1"
                        cycle="false"/>
        <createSequence sequenceName="SEQ_ITEM_SCHEMA"
                        startValue="1"
                        incrementBy="1"
                        cycle="false"/>
        <createSequence sequenceName="SEQ_ITEM_SCHEMA_FIELD"
                        startValue="1"
                        incrementBy="1"
                        cycle="false"/>
        <createSequence sequenceName="SEQ_ITEM_FIELD"
                        startValue="1"
                        incrementBy="1"
                        cycle="false"/>

        <!-- Constraints -->
        <addForeignKeyConstraint constraintName="FK_ITEM_SCHEMA_FIELD_SCHEMA"
                                 baseTableName="ITEM_SCHEMA_FIELD"
                                 baseColumnNames="SCHEMA_ID"
                                 deferrable="false"
                                 initiallyDeferred="false"
                                 onDelete="NO ACTION"
                                 onUpdate="NO ACTION"
                                 referencedColumnNames="ID"
                                 referencedTableName="ITEM_SCHEMA"
                                 referencesUniqueColumn="true"/>

        <addForeignKeyConstraint constraintName="FK_ITEM_FIELD_ITEM"
                                 baseTableName="ITEM_FIELD"
                                 baseColumnNames="ITEM_ID"
                                 deferrable="false"
                                 initiallyDeferred="false"
                                 onDelete="NO ACTION"
                                 onUpdate="NO ACTION"
                                 referencedColumnNames="ID"
                                 referencedTableName="ITEM"
                                 referencesUniqueColumn="true"/>

        <addForeignKeyConstraint constraintName="FK_ITEM_FIELD_SCHEMA_FIELD"
                                 baseTableName="ITEM_FIELD"
                                 baseColumnNames="FIELD_ID"
                                 deferrable="false"
                                 initiallyDeferred="false"
                                 onDelete="NO ACTION"
                                 onUpdate="NO ACTION"
                                 referencedColumnNames="ID"
                                 referencedTableName="ITEM_SCHEMA_FIELD"
                                 referencesUniqueColumn="true"/>

        <addUniqueConstraint constraintName="C_ITEM_TAG_UNIQUE"
                             tableName="ITEM_TAG"
                             columnNames="TAG_ID, ITEM_ID"
                             disabled="false"
                             initiallyDeferred="false"
                             deferrable="false"/>

        <addUniqueConstraint constraintName="C_ITEM_SCHEMA_FIELD_UNIQUE"
                             tableName="ITEM_SCHEMA_FIELD"
                             columnNames="SCHEMA_ID, NAME"
                             disabled="false"
                             initiallyDeferred="false"
                             deferrable="false"/>
    </changeSet>
</databaseChangeLog>
